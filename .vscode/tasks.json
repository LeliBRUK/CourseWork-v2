{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Collison Tiles/Collison Tiles.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Collison Tiles/Collison Tiles.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Collison Tiles/Collison Tiles.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "type": "msbuild",
      "problemMatcher": [
        "$msCompile"
      ],
      "group": "clean",
      "label": "Clean: solution",
      "detail": "Clean the Collison Tiles.sln solution using dotnet clean"
    }
  ]
}